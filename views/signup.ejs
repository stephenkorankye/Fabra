      <form action="/users/register" method="POST" id="wizard" >
        <!-- SECTION 1 -->
        <h2></h2>
        <section>
          <div class="inner">
            <div class="image-holder">
              <img src="/assets/img/homeshopper2.jpg" alt="" />
            </div>
            <div class="form-content">
              <div class="form-header">
				<div class="row">
					<div class="col-12 mb-1"><img src="/assets/img/fabra-logo.png" alt="" ></div>
					<div class="col-12 "> <h3>SIGN UP</h3></div>
				</div>			  
               
              </div>
              <p>Please fill with your details</p>
              <div class="form-row">
                <div class="form-holder">
                  <input
                    type="text"
                    placeholder="First Name"
                    class="form-control"
					name="firstname"
                  />
                </div>
                <div class="form-holder">
                  <input
                    type="text"
                    placeholder="Last Name"
                    class="form-control"
					name="lastname"
                  />
                </div>
              </div>
              <div class="form-row">
                <div class="form-holder">
                  <input
                    type="email"
                    placeholder="Your Email"
                    class="form-control"
					name="email"
                  />
                </div>
                <div class="form-holder">
                  <input
                    type="number"
                    placeholder="Phone Number"
                    class="form-control"
					name="phone"
                  />
                </div>
              </div>
              <div class="form-row">
                <div class="form-holder">
                  <input 
					type="date" 
					placeholder="Date of Birth"
					class="form-control" 
					name="date"
				/>
                </div>
                <div
                  class="form-holder"
                  style="align-self: flex-end; transform: translateY(4px);"
                >
                  <div class="checkbox-tick" id="getCheckBoxes">
                    <label class="male">
                      <input type="radio" name="gender" value="male" checked />
                      Male<br />
                      <span class="checkmark"></span>
                    </label>
                    <label class="female">
                      <input type="radio" name="gender" value="female" />
                      Female<br />
                      <span class="checkmark"></span>
                    </label>
                  </div>
                </div>
              </div>
              <div class="form-row">
                <div class="form-holder">
                  <input 
					type="password"
					placeholder="Password"
					class="form-control"
					name="password"
					
				/>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- SECTION 2 -->
        <h2></h2>
        <section>
          <div class="inner">
            <div class="image-holder">
              <img src="/assets/img/business-woman2.jpg" alt="" />
            </div>
            <div class="form-content">
              <div class="form-header">
                <div class="row">
					<div class="col-12 mb-1"><img src="/assets/img/fabra-logo.png" alt="" ></div>
					<div class="col-12 "> <h3>SIGN UP</h3></div>
				</div>
              </div>
              <p>Please fill with additional info</p>
              <div class="form-row">
                <div class="form-holder w-100">
					<div class="select">
						<div class="form-holder">
						  <div class="select-control">Your Region</div>
						 
						  <input class="regionHere" name="finalRegion" style="display:none" value="">
					
							
						  <i class="zmdi zmdi-caret-down"></i>
						</div>
						<ul class="dropdown">
						  <li rel="Greater Accra Region" name="region" class="region" value="Greater Accra" >Greater Accra</li>
						  <li rel="Ashanti Region" name="region" class="region" value="Ashanti Region" >Ashanti</li>
						  <li rel="Brong Ahafo Region" name="region" class="region" value="BrongAhafo Region" >Brong Ahafo</li>
						</ul>
					  </div>
                </div>
              </div>
              <div class="form-row">
                <div class="form-holder" style="margin-right: 0em;">
					<div class="select">
						<div class="form-holder">
						  <div class="select-control">Your City</div>
						  <input class="cityHere" name="finalCity" style="display:none" value="" > 
							
						  <i class="zmdi zmdi-caret-down"></i>
						</div>
						<ul class="dropdown">
						  <li rel="Accra" name="city" class="city" value="Accra" >Accra</li>
						  <li rel="Kumasi" name="city" class="city" value="Kumasi">Kumasi</li>
						  <li rel="Sunyani" name="city" class="city" value="Sunyani">Sunyani</li>
						</ul>
					  </div>                
			  </div>
			  <div class="form-holder">
				<input
				  type="text"
				  placeholder="House Number"
				  class="form-control"
				  name="housenumber"
				/>
			  </div>
            </div>
          </div>
        </section>

